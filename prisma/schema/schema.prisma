generator client {
  provider = "prisma-client"
  output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  role          String?   // Added by better-auth additionalFields
  phone         String?   // Added by better-auth additionalFields
  status        String?   // Added by better-auth additionalFields
  
  sessions      Session[]
  accounts      Account[]

  tutorProfile  TutorProfile?
  
  // Student side relations
  bookings      Booking[] @relation("StudentBookings")
  reviews       Review[]  @relation("StudentReviews")
  
  // Tutor side relations (if role is TUTOR)
  teachingSessions Booking[] @relation("TutorBookings")
  receivedReviews  Review[]  @relation("TutorReviews")

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

// SkillBridge Specific Models

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

model TutorProfile {
  id          Int      @id @default(autoincrement())
  bio         String
  hourlyRate  Float
  experience  Int
  availability String?  // Stores availability schedule (e.g. JSON or text)
  
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  
  categories  Category[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tutor_profiles")
}

model Category {
  id          Int            @id @default(autoincrement())
  name        String         @unique
  description String?
  tutors      TutorProfile[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model Booking {
  id        Int           @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime
  status    BookingStatus @default(PENDING)
  
  studentId String
  student   User          @relation("StudentBookings", fields: [studentId], references: [id])
  
  tutorId   String
  tutor     User          @relation("TutorBookings", fields: [tutorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("bookings")
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String
  
  studentId String
  student   User     @relation("StudentReviews", fields: [studentId], references: [id])
  
  tutorId   String
  tutor     User     @relation("TutorReviews", fields: [tutorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("reviews")
}
